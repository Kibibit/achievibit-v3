{
  "name": "@kibibit/achievibit",
  "version": "3.0.0",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:styles": "stylelint \"projects/design-system/src/**/*.scss\" --config .stylelintrc.js",
    "lint:styles:fix": "stylelint \"projects/design-system/src/**/*.scss\" --config .stylelintrc.js --fix",
    "start:dev": "pnpm -r --parallel run start:dev",
    "build:prod": "pnpm -r --parallel run build:prod",
    "\n# SDK GENERATION SCRIPTS:": "",
    "bump-version": "npm version --no-git-tag-version patch",
    "post:sdk:node": "npm run bump-version && node ./scripts/copy-to-sdk.mjs && cd ./sdks/node && npm install --package-lock-only",
    "sdk:node": "swagger-codegen generate -i http://localhost:3003/api/docs-json -l typescript-axios -o ./sdks/node --additional-properties npmName=@kibibit/achievibit-server-node-sdk && npm run post:sdk:node",
    "sdk:angular": "swagger-codegen generate -i http://localhost:3003/api/docs-json -l typescript-angular -o ./sdks/angular -c ./angular-sdk-options.json",
    "sdk:angular:build": "ng-packagr -p ./sdks/angular/ng-package.json",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "thatkookooguy <neilkalman@gmail.com>",
  "license": "MIT",
  "description": "",
  "devDependencies": {
    "@angular-eslint/eslint-plugin": "^18.3.1",
    "@angular-eslint/eslint-plugin-template": "^18.3.1",
    "@angular-eslint/template-parser": "^18.3.1",
    "@angular/cli": "17",
    "@html-eslint/eslint-plugin": "^0.27.0",
    "@html-eslint/parser": "^0.27.0",
    "@stylistic/eslint-plugin": "^2.8.0",
    "@stylistic/eslint-plugin-js": "^2.8.0",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "angular-eslint": "^18.3.1",
    "eslint": "^8.57.1",
    "eslint-plugin-attribute-formatting": "link:plugins/eslint-plugin-attribute-formatting",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2"
  }
}
